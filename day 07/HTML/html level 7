<div class="container">
    <h2>მომხმარებლის ინფორმაციის შეყვანა</h2>
    <div class="form-group">
        <label for="name">სახელი:</label>
        <input type="text" id="name" placeholder="შეიყვანეთ სახელი">
    </div>
    <div class="form-group">
        <label for="surname">გვარი:</label>
        <input type="text" id="surname" placeholder="შეიყვანეთ გვარი">
    </div>
    <div class="form-group">
        <label for="age">ასაკი:</label>
        <input type="number" id="age" placeholder="შეიყვანეთ ასაკი">
    </div>
    <div class="form-group">
        <label for="country">ქვეყანა:</label>
        <input type="text" id="country" placeholder="შეიყვანეთ ქვეყანა">
    </div>
    <div class="form-group">
        <label for="city">ქალაქი:</label>
        <input type="text" id="city" placeholder="შეიყვანეთ ქალაქი">
    </div>
    <div class="form-group">
        <label for="car">საყვარელი მანქანა:</label>
        <input type="text" id="car" placeholder="შეიყვანეთ საყვარელი მანქანა">
    </div>
    <div class="form-group">
        <label for="color">საყვარელი ფერი:</label>
        <input type="text" id="color" placeholder="შეიყვანეთ საყვარელი ფერი">
    </div>

    <button onclick="generateSentence()">წინადადების შექმნა</button>

    <div class="result" id="result"></div>
</div>

<script>
    function generateSentence() {
        // მომხმარებლის ინფორმაციის მიღება
        const name = document.getElementById('name').value;
        const surname = document.getElementById('surname').value;
        const age = document.getElementById('age').value;
        const country = document.getElementById('country').value;
        const city = document.getElementById('city').value;
        const car = document.getElementById('car').value;
        const color = document.getElementById('color').value;

        // წინადადების შექმნა
        const sentence = `${name} ${surname} არის ${age} წლის და ცხოვრობს ${city}, ${country}-ში. მისთვის საყვარელი მანქანაა ${car}, ხოლო საყვარელი ფერია ${color}.`;

        // შედეგის ჩვენება
        document.getElementById('result').innerText = sentence;
    }
</script>

